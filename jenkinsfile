node {
    stage('SCM') {
	echo 'Gathering code from version control'
    git branch: '${branch}', url: 'https://github.com/valch85/study-groovy-pluralsight.git'
    }
    stage('Build') {
        try{
            echo 'Building....'
            echo 'Build new features'
            releasenotes()
        }catch(ex){
            echo 'something whent wrong'
            echo ex.toString();
            ex.printStackTrace();
            currentBuild.result = 'FAILURE'
        }
        finally{
            // cleanup
        }
    }
    stage('Test') {
        echo 'Testing....'
    }
    stage('Deploy') {
        echo 'Deploying....'
    }
}